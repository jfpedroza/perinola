{
  "name": "Perinola",
  "version": "1.0.0",
  "description": "Juego Perinola versi√≥n multijugador",
  "main": "script.js",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint && npm run copy-static-assets",
    "serve": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "node copyStaticAssets.js",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "keywords": [],
  "author": "Jhon Pedroza<jhonpedroza@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "express": "^4.15.4",
    "socket.io": "^2.0.3"
  },
  "devDependencies": {
    "@types/express": "^4.0.37",
    "@types/jquery": "^3.2.12",
    "@types/socket.io": "^1.4.30",
    "@types/socket.io-client": "^1.4.30",
    "concurrently": "^3.5.0",
    "nodemon": "^1.11.0",
    "shelljs": "^0.7.8",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2"
  }
}
